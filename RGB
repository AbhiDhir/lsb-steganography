#!/usr/bin/python3

from PIL import Image

def main(imageName):

    im = Image.open(imageName)
    pixel = im.load()
    array = []
    x = im.size [0]
    y = im.size [1]


    for a in range(0,x):
        for b in range(0,y):
            a1 = bin(pixel[a,b] [0])
            b1 = bin(pixel[a,b] [1])
            c1 = bin(pixel[a,b] [2])
            #tup = (a1, b1, c1)
            array.append(lsb(a1, b1, c1))
    print(array)

