def lsb(a1,b1,c1):
    a1 = str(a1)[-2:]
    b1 = str(b1)[-2:]
    c1 = str(c1)[-2:]
    #adding '0'
    if len(a1) == 1:
        a1 = ("0000000"+ a1)
    else:
        a1 = ("000000"+ a1)
    if len(b1) == 1:
        b1 = ("0000000"+ b1)
    else:
        b1 = ("000000"+ b1)
    if len(c1) == 1:
        c1 = ("0000000"+ c1)
    else:
        c1 =  ("000000"+c1)

    return (a1,b1,c1)

main(input("Enter image name. (eg. hello.png) "))

